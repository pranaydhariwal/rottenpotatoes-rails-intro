-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => (@css_valid==1)?"hilite":""}= link_to "Movie Title",{column: "movies"}, :id => "title_header"
      %th Rating
      %th{:class => (@css_valid==0)?"hilite":""}= link_to "Release Date",{column: "releasedate"}, :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
